@using BDAS2_Flowers.Models.ViewModels.EventModels
@model EventTypeVm

<div class="card h-100 shadow-sm position-relative">
    <div class="card-body">
        <h5 class="card-title mb-1">@Model.Name</h5>
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
                <p class="text-muted small mb-0">@Model.Description</p>
        }
    </div>

    <a class="stretched-link"
       asp-controller="Events"
       asp-action="Type"
       asp-route-id="@Model.EventTypeId"></a>
</div>
