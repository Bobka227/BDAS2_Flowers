@using BDAS2_Flowers.Models.ViewModels.ReviewModels
@model ReviewsPageVm

@{
    ViewData["Title"] = "Recenze";

    Func<int, string> Stars = (rating) =>
    {
        var sb = new System.Text.StringBuilder();
        for (int i = 1; i <= 5; i++)
            sb.Append($@"<i class=""bi {(i <= rating ? "bi-star-fill" : "bi-star")}""></i>");
        return sb.ToString();
    };

    var avg = Model?.Average ?? 0.0;
    var count = Model?.Count ?? 0;
}

<section class="hero mb-4">
    <div class="flex-fill">
        <span class="badge badge-hero rounded-pill px-3 py-2">
            <i class="bi bi-chat-dots"></i> Ověřená hodnocení
        </span>
        <h1 class="display-5 fw-bold mt-2">Recenze zákazníků</h1>
        <p class="text-muted fs-6 mb-0">
            Skutečné zkušenosti našich klientů. Děkujeme, že nám pomáháte růst!
        </p>
        <div class="mt-3">
            <strong>@avg.ToString("0.0")/5</strong>
            <span class="ms-2 text-warning">
                @Html.Raw(Stars((int)Math.Round(avg)))
            </span>
            <span class="text-muted ms-2">(@count hodnocení)</span>
        </div>
    </div>

    <img class="hero-photo"
         src="~/images/main-photo.jpg"
         asp-append-version="true"
         alt="Flowers">
</section>

@if (TempData["Msg"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}

<div class="row g-4 mb-5">
    @if (Model?.Reviews != null)
    {
        foreach (var r in Model.Reviews)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card rounded-4 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h5 class="card-title mb-0">@r.Name</h5>
                            <small class="text-muted">@r.Created.ToString("d. M. yyyy")</small>
                        </div>
                        <div class="text-warning mb-2" aria-label="@r.Stars z 5">
                            @Html.Raw(Stars(r.Stars))
                        </div>
                        <p class="mb-2">@r.Text</p>
                        @if (!string.IsNullOrWhiteSpace(r.City))
                        {
                            <div class="text-muted small">
                                <i class="bi bi-geo-alt"></i> @r.City
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <section class="mb-5">
        <h2 class="h5 mb-3">Přidat vlastní recenzi</h2>

        <form asp-action="Add" asp-controller="Reviews" method="post"
              class="card rounded-4 shadow-sm p-3 p-md-4">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-3">
                <label asp-for="NewCity" class="form-label">Město</label>
                <input asp-for="NewCity" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Hodnocení</label>
                <div class="d-flex gap-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio"
                                   id="NewStars_@i" name="NewStars" value="@i"
                                   @(Model?.NewStars == i ? "checked" : "") />
                            <label class="form-check-label" for="NewStars_@i">
                                @Html.Raw(Stars(i))
                            </label>
                        </div>
                    }
                </div>
                <span asp-validation-for="NewStars" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewText" class="form-label">Text recenze</label>
                <textarea asp-for="NewText" rows="3" class="form-control"></textarea>
                <span asp-validation-for="NewText" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-brand">
                Odeslat hodnocení
            </button>
        </form>
    </section>
}
else
{
    <p class="text-muted">
        Pro přidání vlastní recenze se prosím
        <a asp-controller="Auth" asp-action="Login">přihlaste</a>.
    </p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
