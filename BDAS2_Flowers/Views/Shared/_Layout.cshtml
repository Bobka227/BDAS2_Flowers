@using System.Security.Claims
@{
    Layout = null;
    var impersonatedBy = User.Claims.FirstOrDefault(c => c.Type == "ImpersonatedBy")?.Value;
}
<!DOCTYPE html>
<html lang="cs">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flowers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/rose-theme.css" asp-append-version="true" />

    @inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Anti
    @{
        var tokens = Anti.GetAndStoreTokens(ViewContext.HttpContext);
    }
    <meta name="csrf-token" content="@tokens.RequestToken" />
</head>
<body class="theme-rose bg-floral">
    @if (!string.IsNullOrEmpty(impersonatedBy))
    {
        <div class="alert alert-warning text-center mb-0 rounded-0">
            Emulujete uživatele
            <strong>@User.Identity?.Name</strong>
            (<code>@User.FindFirstValue(ClaimTypes.Email)</code>).
            Původně přihlášený admin:
            <strong>@impersonatedBy</strong>.

            <form method="post"
                  action="/auth/stop-impersonation"
                  class="d-inline ms-3">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm btn-outline-dark">
                    Zpět na admin účet
                </button>
            </form>
        </div>
    }
    <div class="container py-3">

        <nav class="navbar navbar-expand-lg rounded-4 px-3 py-2 shadow-sm" style="background:#FFFFFF;">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">FLOW WOW!</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a class="nav-link" asp-controller="Catalog" asp-action="Index">
                                    <i class="bi bi-house-door"></i> E-shop
                                </a>
                            }
                        else
                            {
                                <a href="#" class="nav-link requires-auth" data-intent="eshop">
                                    <i class="bi bi-house-door"></i> E-shop
                                </a>
                            }
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="eventsDropdown"
                           role="button"
                           data-bs-toggle="dropdown"
                           data-bs-auto-close="outside"
                           aria-expanded="false">
                            Události
                        </a>
                        @await Component.InvokeAsync("EventsMenu", new { onlyUsed = false })
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Reviews" asp-action="Index">Recenze</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Kontakt</a></li>
                </ul>

                <div class="d-flex gap-2">
                    @if (User.IsInRole("Admin"))
                    {
                            <a class="btn btn-outline-secondary btn-brand-second" asp-controller="AdminHome" asp-action="Index">
                            <i class="bi bi-speedometer2"></i> Admin
                        </a>

                        <a class="btn btn-outline-secondary btn-brand-second ms-2"
                           asp-controller="AdminProducts" asp-action="Index">
                            <i class="bi bi-box-seam"></i> Produkty
                        </a>
                    }
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="dropdown">
                            <button class="btn btn-brand dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person"></i> @User.Identity!.Name
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Můj profil
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-controller="Auth" asp-action="Logout" method="post" class="px-3 m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link p-0 text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Odhlásit se
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a class="btn btn-brand" asp-controller="Auth" asp-action="Login">
                            <i class="bi bi-person"></i> Přihlásit
                        </a>
                        <a class="btn btn-outline-secondary btn-brand-second" asp-controller="Auth" asp-action="Register">Registrovat</a>
                    }

                    @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a class="btn btn-outline-secondary btn-brand-second" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-bag"></i>
                                                @await Component.InvokeAsync("CartBadge")
                            </a>
                        }
                    else
                        {
                            <button type="button" class="btn btn-outline-secondary btn-brand-second requires-auth" data-intent="cart">
                                <i class="bi bi-bag"></i>
                                <span id="cartBadgeCount" class="badge bg-danger ms-1" style="display:none">0</span>
                            </button>
                        }
                </div>
            </div>
        </nav>

        <main class="my-4">
            @RenderBody()
        </main>

        <footer class="text-center text-muted small my-4">© 2025 BDAS2 Flowers</footer>

    </div>

    <div class="modal fade" id="authRequiredModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-lock"></i> Přihlaste se</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body">
                    Pro pokračování do e-shopu a přidávání do košíku je potřeba se přihlásit.
                </div>
                <div class="modal-footer">
                    <a class="btn btn-brand" asp-controller="Auth" asp-action="Login">Přihlásit</a>
                    <a class="btn btn-outline-secondary btn-brand-second" asp-controller="Auth" asp-action="Register">Registrovat</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      window.__isAuth = @((User.Identity?.IsAuthenticated ?? false).ToString().ToLower());
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const mq = window.matchMedia('(min-width: 992px)');
          document.querySelectorAll('.navbar .dropdown').forEach(function (dd) {
            const toggle = dd.querySelector('[data-bs-toggle="dropdown"]');
            if (!toggle) return;
            const api = bootstrap.Dropdown.getOrCreateInstance(toggle, { autoClose: true });
            dd.addEventListener('mouseenter', () => { if (mq.matches) api.show(); });
            dd.addEventListener('mouseleave', () => { if (mq.matches) api.hide(); });
          });
        });
    </script>

    <script>
      document.addEventListener('click', (e) => {
        const guard = e.target.closest('.requires-auth');
        if (!guard) return;
        if (!window.__isAuth) {
          e.preventDefault();
          new bootstrap.Modal(document.getElementById('authRequiredModal')).show();
        }
      });
    </script>

    <script>
        document.addEventListener('click', async (e) => {
          const btn = e.target.closest('.add-to-cart');
          if (!btn) return;

          if (!window.__isAuth) {
            e.preventDefault();
            new bootstrap.Modal(document.getElementById('authRequiredModal')).show();
            return;
          }

          e.preventDefault();
          const pid = btn.dataset.productId;
          if (!pid) return;

          try {
            const token =
              document.querySelector('input[name="__RequestVerificationToken"]')?.value
              || document.querySelector('meta[name="csrf-token"]')?.content;

            const resp = await fetch('/cart/add', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/x-www-form-urlencoded',
                'X-Requested-With': 'XMLHttpRequest'
              },
              body: `productId=${encodeURIComponent(pid)}&quantity=1&__RequestVerificationToken=${encodeURIComponent(token || "")}`
            });

            const data = await resp.json();
            if (data.ok) {
              const badge = document.getElementById('cartBadgeCount');
              if (badge) {
                badge.textContent = data.count;
                badge.style.display = data.count > 0 ? '' : 'none';
              }
              btn.classList.add('btn-success');
              setTimeout(() => btn.classList.remove('btn-success'), 400);
            }
          } catch {  }
        });
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>