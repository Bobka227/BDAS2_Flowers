@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flowers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/rose-theme.css" asp-append-version="true" />
</head>
<body class="theme-rose bg-floral">
    <div class="container py-3">

        <nav class="navbar navbar-expand-lg bg-white rounded-4 px-3 py-2 shadow-sm">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">KYTKY</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="nav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link active" asp-controller="Catalog" asp-action="Index"><i class="bi bi-house-door"></i> E-shop</a></li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle"
                         href="#"
                         id="eventsDropdown"
                         role="button"
                         data-bs-toggle="dropdown"
                         data-bs-auto-close="outside"
                         aria-expanded="false">
                        Události
                      </a>
                                            @await Component.InvokeAsync("EventsMenu", new { onlyUsed = false })
                    </li>
                    <li class="nav-item"><a class="nav-link" href="#">Reference</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Kontakt</a></li>
                </ul>
                <div class="d-flex gap-2">
                                    @if (User.IsInRole("Admin"))
                                    {
                            <a class="btn btn-outline-secondary" asp-controller="Admin" asp-action="Index">
                                <i class="bi bi-speedometer2"></i> Admin
                            </a>
                                    }
                                    @if (User.Identity?.IsAuthenticated == true)
                                    {
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                <button class="btn btn-brand"><i class="bi bi-person"></i> @User.Identity.Name</button>
                            </form>
                                    }
                                    else
                                    {
                            <a class="btn btn-brand" asp-controller="Auth" asp-action="Login"><i class="bi bi-person"></i> Přihlásit</a>
                            <a class="btn btn-outline-secondary" asp-controller="Auth" asp-action="Register">Registrovat</a>
                                    }
                    <a class="btn btn-outline-secondary"><i class="bi bi-bag"></i></a>
                </div>
            </div>
        </nav>

        <main class="my-4">
            @RenderBody()
        </main>

        <footer class="text-center text-muted small my-4">© 2025 BDAS2 Flowers</footer>

        @* <footer class="site-footer mt-5"> *@
        @*   <div class="container py-3"> *@
        @*     <div class="row align-items-center g-3"> *@
        @*       <div class="col-12 col-lg-4"> *@
        @*         <div class="footer-brand">KYTKY</div> *@
        @*         <div class="footer-note">Čerstvé kytice na míru – Česká Republika</div> *@
        @*       </div> *@
        @*       <div class="col-12 col-lg-5"> *@
        @*         <ul class="nav justify-content-lg-center"> *@
        @*           <li class="nav-item"><a class="nav-link px-2" asp-controller="Catalog" asp-action="Index">E-shop</a></li> *@
        @*           <li class="nav-item"><a class="nav-link px-2" asp-controller="Events" asp-action="Index">Events</a></li> *@
        @*           <li class="nav-item"><a class="nav-link px-2" href="#">Reference</a></li> *@
        @*           <li class="nav-item"><a class="nav-link px-2" href="#">Kontakt</a></li> *@
        @*         </ul> *@
        @*       </div> *@
        @*       <div class="col-12 col-lg-3 text-lg-end"> *@
        @*         <div class="footer-note">© 2025 BDAS2 Flowers</div> *@
        @*       </div> *@
        @*     </div> *@
        @*   </div> *@
        @* </footer> *@

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const mq = window.matchMedia('(min-width: 992px)');
          document.querySelectorAll('.navbar .dropdown').forEach(function (dd) {
            const toggle = dd.querySelector('[data-bs-toggle="dropdown"]');
            if (!toggle) return;
            const api = bootstrap.Dropdown.getOrCreateInstance(toggle, { autoClose: true });
            dd.addEventListener('mouseenter', () => mq.matches && api.show());
            dd.addEventListener('mouseleave', () => mq.matches && api.hide());
          });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
