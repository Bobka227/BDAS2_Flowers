@model List<(int Id, string Name, int Users)>
@{
    ViewData["Title"] = "Role";
    var q = (ViewBag.Query as string) ?? "";
}

<div class="container py-4">
    @if (TempData["Msg"] is string m && !string.IsNullOrWhiteSpace(m))
    {
        <div class="alert alert-info">@m</div>
    }

    <h1 class="h4 mb-3">Role</h1>

    <form method="get" class="row g-2 mb-3">
        <div class="col-12 col-lg-8">
            <input name="q"
                   value="@q"
                   class="form-control"
                   placeholder="Hledat roli podle názvu…"/>
        </div>
        <div class="col-6 col-lg-2">
            <button class="btn btn-outline-secondary w-100">Hledat</button>
        </div>
        <div class="col-6 col-lg-2">
            <a class="btn btn-outline-dark w-100" href="/admin/roles">Vyčistit</a>
        </div>
    </form>

    <form method="post" asp-action="Create" class="row g-2 mb-3">
        @Html.AntiForgeryToken()
        <div class="col-12 col-lg-8">
            <input name="name" class="form-control" placeholder="Nová role…" required/>
        </div>
        <div class="col-12 col-lg-4">
            <button class="btn btn-brand w-100">Přidat</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-light">
                <tr>
                    <th>Název</th>
                    <th class="text-center">Uživatelé</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr><td colspan="3" class="text-center text-muted py-4">Nic nenalezeno.</td></tr>
                }
                else
                {
                    @foreach (var r in Model)
                    {
                            <tr>
                                <td>
                                    <input id="name-@r.Id"
                                           class="form-control form-control-sm"
                                           value="@r.Name"
                                           data-rename-input="@r.Id" />
                                </td>
                                <td class="text-center">@r.Users</td>
                                <td class="text-end">
                                    <div class="d-inline-flex gap-2">
                                        <form asp-action="Rename" asp-route-id="@r.Id" method="post" class="m-0">
                                        @Html.AntiForgeryToken()
                                            <input type="hidden" name="name" value="" data-rename-value="@r.Id"/>
                                            <button type="submit"
                                                    id="btn-rename-@r.Id"
                                                    class="btn btn-sm btn-brand"
                                                    disabled>Přejmenovat</button>
                                        </form>

                                        <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="m-0"
                                              onsubmit="return confirm('Opravdu smazat tuto roli?');">
                                        @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-sm btn-outline-danger"
                                        @(r.Users > 0 ? "disabled" : null)
                                                    title="Nelze smazat: roli používají uživatelé">Smazat</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
    document.querySelectorAll('[data-rename-input]').forEach(inp => {
      const id = inp.dataset.renameInput;
      const btn = document.getElementById('btn-rename-' + id);
      const hidden = document.querySelector('[data-rename-value="' + id + '"]');
      const original = inp.value.trim();

      function sync() {
        const cur = inp.value.trim();
        hidden.value = cur;
        btn.disabled = (cur.length === 0) || (cur === original);
      }
      inp.addEventListener('input', sync);
      sync();
    });
    </script>
}