@model BDAS2_Flowers.Models.ViewModels.AdminModels.AdminPositionEditVm
@{
    ViewData["Title"] = Model.Id.HasValue ? "Upravit pozici" : "Nová pozice";
}

<div class="container py-4">
    <div class="card rounded-4 shadow-sm mx-auto" style="max-width: 900px;">
        <div class="card-header bg-white border-0">
            <h1 class="h4 mb-0">
                @(Model.Id.HasValue ? "Upravit pozici" : "Nová pozice")
            </h1>
        </div>

        <div class="card-body">
            <form method="post"
                  action="@(Model.Id.HasValue
                                 ? Url.Action("Edit", "AdminPositions", new { id = Model.Id })
                                 : Url.Action("Create", "AdminPositions"))">
                @Html.AntiForgeryToken()
                @if (Model.Id.HasValue)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Název pozice</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Počet zaměstnanců na této pozici</label>
                    <input class="form-control" value="@Model.EmployeeCount" readonly />
                </div>

                <div class="d-flex flex-column flex-md-row justify-content-between gap-2 mt-4">
                    <a asp-action="Index"
                       asp-controller="AdminPositions"
                       class="btn btn-outline-secondary btn-brand-second px-4 order-2 order-md-1">
                        <i class="bi bi-arrow-left"></i> Zpět
                    </a>

                    <button type="submit"
                            class="btn btn-brand px-4 order-1 order-md-2">
                        <i class="bi bi-check-circle"></i> Uložit
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
