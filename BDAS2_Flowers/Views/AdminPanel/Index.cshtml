@using BDAS2_Flowers.Models.ViewModels.AdminModels
@model LogsPageVm
@{
    ViewData["Title"] = "Admin panel";
}

<div class="container py-3">
    <h2 class="mb-3">Admin panel</h2>

    @if (TempData["DiagOk"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }
    @if (TempData["DiagErr"] is string er && !string.IsNullOrWhiteSpace(er))
    {
        <div class="alert alert-danger">@er</div>
    }

    <div class="alert alert-info" style="color: #385752; background-color: #A1B4A5; border: 2px solid #385752;">
        Přihlášený uživatel: <strong>@User.Identity?.Name</strong><br />
        Role: <strong>@string.Join(", ", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value))</strong>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-5">
            <div class="card rounded-4 shadow-sm">
                <div class="card-header fw-semibold">Správa</div>
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action" href="/admin/users">Správa uživatelů</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminProducts" asp-action="Index">Produkty</a>
                    <a class="list-group-item list-group-item-action" href="/admin/product-types">Typy produktů</a>
                    <a class="list-group-item list-group-item-action" href="/admin/orders">Objednávky</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminStatuses" asp-action="Index">Statusy</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminDeliveryMethods" asp-action="Index">Způsoby doručení</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminShops" asp-action="Index">Prodejny</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminEventTypes" asp-action="Index">Typy událostí</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminEvents" asp-action="Index">Události</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminPictures" asp-action="Index">Obrázky</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminAddresses" asp-action="Index">Adresy</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminPayments" asp-action="Index">Platby</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminRoles" asp-action="Index">Role</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminReviews" asp-action="Index">Recenze </a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminEmployeers" asp-action="Index">Zaměstnance</a>
                    <a class="list-group-item list-group-item-action" asp-controller="AdminPositions" asp-action="Index">Pracovní pozice</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card rounded-4 shadow-sm">

                <div class="card-header d-flex flex-wrap justify-content-between align-items-center gap-2">
                    <div class="d-flex align-items-center gap-3">
                        <span class="fw-semibold">System logs</span>
                        <small class="text-muted">Celkem: @Model.Total</small>
                    </div>

                    <div class="d-flex gap-2">
                        <form method="post" asp-controller="AdminHome" asp-action="ClearLogsSoft">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-warning"
                                    title="DELETE všech záznamů + reset sekvence"
                                    onclick="return confirm('Smazat všechny záznamy logu (DELETE)?')">
                                Vyčistit (DELETE)
                            </button>
                        </form>

                        <form method="post" asp-controller="AdminHome" asp-action="ClearLogsHard">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    title="TRUNCATE tabulky logu + reset sekvence"
                                    onclick="return confirm('TRUNCATE: nenávratně vyprázdnit log a resetovat sekvenci?')">
                                Vyčistit (TRUNCATE)
                            </button>
                        </form>
                    </div>
                </div>

                <div id="logs-container">
                    @await Html.PartialAsync("/Views/AdminPanel/_LogsTable.cshtml", Model)
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("click", function (e) {
            const link = e.target.closest("[data-log-page]");
            if (!link) return;
            e.preventDefault();
            const url = link.getAttribute("href");
            fetch(url, { headers: { "X-Requested-With": "XMLHttpRequest" } })
                .then(r => r.text())
                .then(html => document.getElementById("logs-container").innerHTML = html);
        });
    </script>
}
