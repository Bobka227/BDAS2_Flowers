@model BDAS2_Flowers.Models.ViewModels.EventModels.EventOrderVm
@{
    ViewData["Title"] = "Objednat organizaci akce";

    var baseService = Model.Products?
        .FirstOrDefault(p => string.Equals(
            p.Title,
            "Organizace akce (poplatek)",
            StringComparison.OrdinalIgnoreCase));
}

<div class="container py-4">
    <h1 class="mb-4">Objednat organizaci akce</h1>

    <form asp-action="Order" asp-controller="OrderEvent" method="post"
          class="p-4 rounded-4 bg-white shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="EventTypeId" />

        <div class="row g-4">
            <div class="col-lg-4">
                <h2 class="h5 mb-3">Detaily akce</h2>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label">Datum akce</label>
                    <input asp-for="EventDate" class="form-control" type="date" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ShopId" class="form-label">Prodejna</label>
                    <select asp-for="ShopId" class="form-select">
                        <option value="">(vyberte prodejnu)</option>
                        @foreach (var s in Model.Shops)
                        {
                                <option value="@s.Id" selected="@(s.Id == Model.ShopId)">
                                @s.Name
                                </option>
                        }
                    </select>
                    <span asp-validation-for="ShopId" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label class="form-label">Adresa konání</label>
                </div>
                <div class="row g-2">
                    <div class="col-md-6">
                        <input asp-for="Street" class="form-control" placeholder="Ulice" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="HouseNumber" class="form-control" placeholder="Číslo domu" />
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="PostalCode" class="form-control" placeholder="PSČ" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label">Organizace akce (poplatek)</label>
                    <div class="fw-semibold">
                                        @(baseService != null
                                                ? baseService.PriceFrom.ToString("0 Kč")
                                                : "1500 Kč") / balíček
                    </div>

                    <div class="form-text">
                        Povinná služba zahrnutá v každé objednávce akce
                        (příprava, návrh a základní koordinace).
                    </div>
                    <input type="hidden" asp-for="Quantity" value="1" />
                </div>
            </div>

            <div class="col-lg-8">
                <h2 class="h5 mb-1 d-flex justify-content-between align-items-center">
                    <span>Služby pro Vaši akci</span>
                    <small class="text-muted">Vyberte, co chcete zahrnout do návrhu</small>
                </h2>

                @if (Model.Products?.Any() == true)
                {
                        <div class="row g-3 mt-1" id="servicesList">
                        @for (int i = 0; i < Model.Products.Count; i++)
                        {
                            var p = Model.Products[i];
                            var isBase = baseService != null && p.ProductId == baseService.ProductId;

                            <div class="col-12 col-md-6 @(isBase ? "d-none" : "")">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-body d-flex flex-column">
                                        <input type="hidden" asp-for="Products[@i].ProductId" />
                                        <input type="hidden" asp-for="Products[@i].Title" />
                                        <input type="hidden" asp-for="Products[@i].Subtitle" />
                                        <input type="hidden" asp-for="Products[@i].PriceFrom" />

                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <div class="fw-semibold">@p.Title</div>
                                                                @if (!string.IsNullOrWhiteSpace(p.Subtitle))
                                                                {
                                                        <div class="text-muted small">@p.Subtitle</div>
                                                                }
                                            </div>
                                                            @if (p.Recommended && !isBase)
                                                            {
                                                    <span class="badge bg-success-subtle text-success">
                                                        Doporučujeme
                                                    </span>
                                                            }
                                        </div>

                                        <div class="mb-2">
                                            <span class="fw-semibold">
                                                                @p.PriceFrom.ToString("0 Kč")
                                            </span>
                                            <span class="text-muted small"> / balíček</span>
                                        </div>

                                        <div class="mt-auto d-flex align-items-center justify-content-between">
                                                            @if (!isBase)
                                                            {
                                                    <label class="form-label mb-0 me-2 small">
                                                        Počet balíčků
                                                    </label>
                                                    <input asp-for="Products[@i].Quantity"
                                                           type="number" min="0"
                                                           class="form-control form-control-sm text-end service-qty"
                                                           data-price="@p.PriceFrom"
                                                           style="max-width:90px;" />
                                                            }
                                                            else
                                                            {
                                                    <input asp-for="Products[@i].Quantity" type="hidden" value="0" />
                                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>

                        <p class="text-muted small mt-2">
                            Položky s nulovým počtem se do objednávky nepřidají.
                        </p>

                        <div class="mt-3 p-3 rounded-3 bg-light d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">Předběžná cena doplňkových služeb</div>
                                <div class="text-muted small">
                                    Orientační cena za vybrané služby (bez základního balíčku a případných úprav v návrhu).
                                </div>
                            </div>
                            <div class="fs-5 fw-bold" id="servicesTotal">0 Kč</div>
                        </div>
                }
                else
                {
                        <p class="text-muted mt-2">
                            Zatím nemáme připravené konkrétní služby pro tuto akci.
                            Pošlete nám objednávku a návrh připravíme individuálně.
                        </p>
                }
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-brand">
                Odeslat objednávku k posouzení
            </button>
            <a asp-controller="Events"
               asp-action="Type"
               asp-route-id="@Model.EventTypeId"
               class="btn btn-brand-second">
                Zpět
            </a>
        </div>
    </form>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            (function () {
                function recalcTotal() {
                    let total = 0;
                    document.querySelectorAll('.service-qty').forEach(function (input) {
                        const qty = parseInt(input.value || '0', 10);
                        const price = parseFloat(input.getAttribute('data-price') || '0');
                        if (!isNaN(qty) && !isNaN(price) && qty > 0) {
                            total += qty * price;
                        }
                    });
                    const lbl = document.getElementById('servicesTotal');
                    if (lbl) {
                        lbl.textContent = total.toLocaleString('cs-CZ') + ' Kč';
                    }
                }

                document.addEventListener('DOMContentLoaded', function () {
                    document.querySelectorAll('.service-qty').forEach(function (input) {
                        input.addEventListener('input', recalcTotal);
                        input.addEventListener('change', recalcTotal);
                    });
                    recalcTotal();
                });
            })();
        </script>
}