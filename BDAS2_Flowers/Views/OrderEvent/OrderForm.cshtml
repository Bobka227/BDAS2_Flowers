@model BDAS2_Flowers.Models.ViewModels.EventModels.EventOrderVm
@{
    ViewData["Title"] = "Objednat organizaci";
}

<div class="container py-4">
    <h1 class="mb-4">Objednat organizaci</h1>

    <form asp-action="Order" asp-controller="OrderEvent" method="post"
          class="p-4 rounded-4 bg-white shadow-sm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="EventTypeId" />

        <div class="row g-4">
            <div class="col-lg-5">
                <h2 class="h5 mb-3">Detaily akce</h2>

                <div class="mb-3">
                    <label asp-for="EventDate" class="form-label">Datum akce</label>
                    <input asp-for="EventDate" class="form-control" type="date" />
                    <span asp-validation-for="EventDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ShopId" class="form-label">Prodejna</label>
                    <select asp-for="ShopId" class="form-select">
                        <option value="">(vyberte prodejnu)</option>
                        @foreach (var s in Model.Shops)
                        {
                            <option value="@s.Id" selected="@(s.Id == Model.ShopId)">
                                @s.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="ShopId" class="text-danger"></span>
                </div>

                <div class="mb-2">
                    <label class="form-label">Adresa konání</label>
                </div>
                <div class="row g-2">
                    <div class="col-md-6">
                        <input asp-for="Street" class="form-control" placeholder="Ulice" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="HouseNumber" class="form-control" placeholder="Číslo domu" />
                        <span asp-validation-for="HouseNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="PostalCode" class="form-control" placeholder="PSČ" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label d-block">Platba</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="PaymentType" value="cash" id="payCash">
                        <label class="form-check-label" for="payCash">Hotově</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="PaymentType" value="card" id="payCard">
                        <label class="form-check-label" for="payCard">Kartou</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="PaymentType" value="cupon" id="payCupon">
                        <label class="form-check-label" for="payCupon">Kupon</label>
                    </div>
                    <span asp-validation-for="PaymentType" class="text-danger d-block"></span>
                </div>

                <div id="cardFields" class="mt-3">
                    <div class="mb-2">
                        <label asp-for="CardNumber" class="form-label"></label>
                        <input asp-for="CardNumber"
                               class="form-control"
                               placeholder="1234 5678 9012 3456" />
                        <span asp-validation-for="CardNumber" class="text-danger"></span>
                    </div>
                </div>

                <div id="couponFields" class="mt-3">
                    <div class="mb-2">
                        <label asp-for="CouponCode" class="form-label"></label>
                        <input asp-for="CouponCode" class="form-control" placeholder="Např. FLOWERS2025" />
                        <span asp-validation-for="CouponCode" class="text-danger"></span>
                    </div>
                </div>


                <div class="mt-3">
                    <label asp-for="Quantity" class="form-label">Balíček organizace</label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                    <span class="form-text">
                        Základní služba „organizace akce“ (příprava, návrh, koordinace).
                    </span>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-7">
                <h2 class="h5 mb-3 d-flex justify-content-between align-items-center">
                    <span>Konfigurátor výzdoby</span>
                    <small class="text-muted">Zvolte, co chcete na své akci</small>
                </h2>

                @if (Model.Products?.Any() == true)
                {
                    <div class="row g-3">
                        @for (int i = 0; i < Model.Products.Count; i++)
                        {
                            var p = Model.Products[i];
                            <div class="col-12 col-md-6">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-body d-flex flex-column">
                                        <input type="hidden" asp-for="Products[@i].ProductId" />
                                        <input type="hidden" asp-for="Products[@i].Title" />
                                        <input type="hidden" asp-for="Products[@i].Subtitle" />
                                        <input type="hidden" asp-for="Products[@i].PriceFrom" />

                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <div class="fw-semibold">@p.Title</div>
                                                @if (!string.IsNullOrWhiteSpace(p.Subtitle))
                                                {
                                                    <div class="text-muted small">@p.Subtitle</div>
                                                }
                                            </div>
                                            @if (p.Recommended)
                                            {
                                                <span class="badge bg-success-subtle text-success">
                                                    Doporučujeme
                                                </span>
                                            }
                                        </div>

                                        <div class="mb-2">
                                            <span class="fw-semibold">@p.PriceFrom.ToString("0 Kč")</span>
                                        </div>

                                        <div class="mt-auto d-flex align-items-center justify-content-between">
                                            <label class="form-label mb-0 me-2 small">
                                                Počet ks
                                            </label>
                                            <input asp-for="Products[@i].Quantity"
                                                   type="number" min="0"
                                                   class="form-control form-control-sm text-end"
                                                   style="max-width:90px;" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <p class="text-muted small mt-2">
                        Položky s nulovým počtem se do objednávky nepřidají.
                    </p>
                }
                else
                {
                    <p class="text-muted">
                        Zatím nemáme připravené konkrétní produkty pro tuto akci.
                        Pošlete nám objednávku a návrh připravíme individuálně.
                    </p>
                }
            </div>
        </div>

        <div class="mt-4 d-flex gap-2">
            <button type="submit" class="btn btn-brand">
                Odeslat objednávku
            </button>
            <a asp-controller="Events"
               asp-action="Type"
               asp-route-id="@Model.EventTypeId"
               class="btn btn-brand-second">
                Zpět
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        (function () {
            function updatePaymentPanels() {
                const selected = document.querySelector('input[name="PaymentType"]:checked');
                const val = selected ? selected.value : "";
                const card = document.getElementById('cardFields');
                const coupon = document.getElementById('couponFields');

                if (card) card.classList.add('d-none');
                if (coupon) coupon.classList.add('d-none');

                if (val === 'card' && card) {
                    card.classList.remove('d-none');
                } else if (val === 'cupon' && coupon) {
                    coupon.classList.remove('d-none');
                }
            }

            document.addEventListener('DOMContentLoaded', function () {
                document.querySelectorAll('input[name="PaymentType"]').forEach(r => {
                    r.addEventListener('change', updatePaymentPanels);
                });
                updatePaymentPanels();
            });
        })();
    </script>
}

