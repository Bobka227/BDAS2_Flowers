@model IEnumerable<BDAS2_Flowers.Models.ViewModels.EventTypeCardVm>
@{
    ViewData["Title"] = "Events";
}
<section class="hero mb-4">
    <div class="flex-fill">
        <span class="badge text-success bg-white border rounded-pill px-3 py-2">
            <i class="bi bi-calendar-event"></i> Květiny pro vaše události
        </span>
        <h1 class="display-5 mb-1">Události</h1>
        <div class="text-muted">Kytice a aranžmá na svatby, narozeniny, promoce a další.</div>
    </div>
    <img class="rounded-4 d-none d-md-block" style="width:46%;height:260px;object-fit:cover"
         src="/img/events/generic.jpg" />
</section>

<div class="steps">
    <div class="step"><div class="ico bi bi-chat-dots"></div><div>Konzultace</div></div>
    <div class="step"><div class="ico bi bi-palette"></div><div>Styl & barvy</div></div>
    <div class="step"><div class="ico bi bi-basket2"></div><div>Příprava květin</div></div>
    <div class="step"><div class="ico bi bi-truck"></div><div>Doručení</div></div>
    <div class="step"><div class="ico bi bi-hand-thumbs-up"></div><div>Instalace</div></div>
</div>

<div class="row g-4">
    @foreach (var e in Model)
    {
        <div class="col-12 col-sm-6 col-lg-3">
            @await Html.PartialAsync("_EventCard", e)
        </div>
    }
</div>
