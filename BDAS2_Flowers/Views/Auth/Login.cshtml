@using BDAS2_Flowers.Models.ViewModels.UserProfileModels
@model LoginVm
@{
    ViewData["Title"] = "Přihlášení";
}
<div class="container" style="max-width:460px">
  <h1 class="h3 mb-3">Přihlásit se</h1>

  <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

    @if (ViewBag.ShowRegisterPrompt == true)
    {
          <div class="alert alert-warning d-flex justify-content-between align-items-center"
                           style="background-color: #A1B4A5; color: #385752; border: 2px solid #385752;">
              <span>Účet s tímto e-mailem neexistuje. Chcete si ho vytvořit?</span>
              <a class="btn btn-sm btn-brand" asp-action="Register">Registrovat</a>
          </div>
    }

  <form method="post">
        @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="mb-3">
      <label class="form-label">E-mail</label>
      <input asp-for="Email" class="form-control" />
      <span class="text-danger" asp-validation-for="Email"></span>
    </div>

    <div class="mb-3">
      <label class="form-label">Heslo</label>
      <input asp-for="Password" type="password" class="form-control" />
      <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <button class="btn btn-brand">Přihlásit</button>
    <a asp-action="Register" class="btn link-brand">Registrovat</a>
  </form>
</div>

@section Scripts {
 <partial name="_ValidationScriptsPartial" />
 }
